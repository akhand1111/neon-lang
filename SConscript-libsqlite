import os
import zipfile

Import("env")

sqliteenv = Environment()

if not os.path.exists("external/sqlite-amalgamation-3080803/sqlite3.c"):
    zipfile.ZipFile("external/sqlite-amalgamation-3080803.zip").extractall("external")
sqliteenv.Append(CPPFLAGS=["-DSQLITE_THREADSAFE=0"])
libsqlite = sqliteenv.Library("external/sqlite-amalgamation-3080803/sqlite3.c")

env.Append(CPPPATH=["external/sqlite-amalgamation-3080803"])

Return(["libsqlite"])
